<form class='pure-form pure-form-aligned login-form' method='post'>
	<fieldset>
		<div class='pure-control-group'>
			<label for='email'>邮箱</label>
			<input id='email' name='email' type='email' placeholder='邮箱'>
		</div>
		<div class='pure-control-group'>
			<label for='name'>用户名</label>
			<input id='name' name='name' type='text' placeholder='用户名'>
		</div>
		<div class='pure-control-group'>
			<label for='pwd'>密码</label>
			<input id='pwd' name='password' type='password' placeholder='密码'>
		</div>
		<input type='submit' class='pure-button pure-button-submit' id='submit' value='注册' />
	</fieldset>
	<% if(error) { %>
      <div><%= error %></div>
    <% } %>
</form>