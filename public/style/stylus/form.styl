.two-form
	padding-top 80px
	.form-tab
		width 35%
		padding-bottom 10px
		margin 0 auto 20px
		border-bottom 1px solid #ddd
		text-align center
		.tab-item
			padding 5px 15px
			color #aaa
			font-weight bold
			font-size 18px
		& .active
			color #000
	.login-form
		width 35%
		margin 0 auto
		label
			width 5em
		.pure-button-submit
			display block
			width 60%
			margin 30px auto
			color #fff
			background-color #0078e7
		.control-group
			font-size 12px
			text-align center
			.remember
				margin-right 15px
			#forget,.remember
				cursor pointer
